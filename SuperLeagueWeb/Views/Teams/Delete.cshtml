@model Team
@{
    ViewData["Title"] = "Delete Team";
}

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" class="form-control" hidden>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h3 class="text-primary">Delete Team</h3>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" disabled>
        </div>
        <div class="row pb-2">
            <div class="col-6 mb-3">
                <label asp-for="FlagUrl" class="form-label">Flag URL</label>
                <input asp-for="FlagUrl" class="form-control" disabled>
            </div>
            <div class="col-6 mb-3">
                <label asp-for="KitUrl" class="form-label">Kit URL</label>
                <input asp-for="KitUrl" class="form-control" disabled>
            </div>
        </div>
        <input type="submit" value="Delete" class="btn btn-primary">
        <a asp-controller="Teams" asp-action="Index" class="btn btn-secondary">Go Back</a>
    </div>
</form>
