@model Category

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h3 class="text-primary">Delete Category</h3>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" disabled>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder" class="form-label"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled>
        </div>
        <input type="submit" value="Delete" class="btn btn-primary">
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Go Back</a>
    </div>
</form>
